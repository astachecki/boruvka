<html>

    <head>
    	<meta charset="UTF-8">
    	<title>Boruvka: {{title}}</title>
    	<meta name="description" content="Boruvka: Orchestration made simple">
    	<meta name="author" content="Artur Stachecki">
    	<link rel="shortcut icon" href="../img/favicon.ico">
    	<link rel="stylesheet" type="text/css" href="../css/main.css">
    	<link rel="stylesheet" type="text/css" href="../css/supp.css">
    </head>
    
    <body>
        <div class="container">

        	<header class="header">
        		<div class="logo-header">
        			<img class="logo-img" src="../img/logo1.png">
        		</div>
        		<div class="user-header">
        				<h1 class="user-header__title">{{user}}</h1>
        				<nav class="user-nav">
        					<a class="user-nav__item user-icon user-icon--profile" href="#" data-info="Profile">
                                <span>Profile</span>
                            </a>
        					<a class="user-nav__item user-icon user-icon--logout" href="#" data-info="Logout">
                                <span>Logout</span>
                            </a>
        				</nav>
        			</div>
        	</header>

            <nav id="menu" class="menu">
        		<div class="menu-wrap">
        			<ul data-menu="main" class="menu-list">
        				<li class="menu-item"><a class="menu-link" href="#">{{tasks}}</a></li>
        				<li class="menu-item"><a class="menu-link" href="#">{{machines}}</a></li>
        				<li class="menu-item"><a class="menu-link" href="#">{{users}}</a></li>
        				<li class="menu-item"><a class="menu-link" href="#">{{settings}}</a></li>
        			</ul>
        		</div>
        	</nav>

            <div class="content">
        		<ul class="tiles">
        			<li class="tile">
        				<div class="icon"></div>
        			</li>
        			<li class="tile">
        				<div class="icon"></div>
        			</li>
        		</ul>
            </div>

        </div>
    </body>

</html>