<html>

    <head>
    	<meta charset="UTF-8">
    	<title>Boruvka: {{title}}</title>
    	<meta name="description" content="Boruvka: Orchestration made simple">
    	<meta name="author" content="Artur Stachecki">
    	<link rel="shortcut icon" href="../img/favicon.ico">
    	<link rel="stylesheet" type="text/css" href="../css/main.css">
    	<link rel="stylesheet" type="text/css" href="../css/user.css">
        <link rel="stylesheet" type="text/css" href="../css/modal.css">
    </head>
    
    <body>
        <div class="container">
            <div class="modal modal-effect" id="modal-profile">
    			<div class="modal-content">
    				<h3>Modal Dialog</h3>
    				<div>
    					<p>This is a modal window.</p>
    					<button class="modal-close">Close</button>
    				</div>
    			</div>
    		</div>
        	<header class="header">
        		<div class="logo-header">
        			<img class="logo-img" src="../img/logo1.png">
        		</div>
        		<div class="user-header">
        				<h1 class="user-header__title">{{user}}</h1>
        				<nav class="user-nav">
        					<a class="user-nav__item user-icon icon-settings modal-trigger" href="#" data-info="Profile" data-modal="modal-profile">
                                <span>Profile</span>
                            </a>
        					<a class="user-nav__item user-icon icon-exit" href="#" data-info="Logout">
                                <span>Logout</span>
                            </a>
        				</nav>
        			</div>
        	</header>

            <nav id="menu" class="menu">
        		<div class="menu-wrap">
        			<ul data-menu="main" class="menu-list">
        				<li class="menu-item"><a class="menu-link" href="#">{{tasks}}</a></li>
        				<li class="menu-item"><a class="menu-link" href="#">{{machines}}</a></li>
        				<li class="menu-item"><a class="menu-link" href="#">{{users}}</a></li>
        				<li class="menu-item"><a class="menu-link" href="#">{{settings}}</a></li>
        			</ul>
        		</div>
        	</nav>

            <div class="content">
        		<ul class="tiles">
        			<li class="tile">
        				<div class="icon"></div>
        			</li>
        			<li class="tile">
        				<div class="icon"></div>
        			</li>
        		</ul>
            </div>
        <div class="modal-overlay"></div>
        </div>
        <script src="../js/modal.js"></script>
    </body>

</html>